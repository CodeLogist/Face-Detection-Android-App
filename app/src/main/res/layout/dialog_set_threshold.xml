<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="threshold"
            type="com.codelogist.zoeticaichallenge_face_detection.SetThresholdDialogFragment.Threshold" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="283dp"
        android:layout_height="219dp"
        android:gravity="center"
        android:background="@drawable/popup">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="@string/set_threshold_dialog_title"
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/threshold_dialog_threshold_et"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:textColorHint="#a4a4a7"
            android:hint="@string/set_threshold_dialog_hint"
            android:text="@={threshold.t}"
            android:background="@drawable/dialog_edittext_shape"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a4a4a7"
            android:textSize="12sp"
            android:paddingLeft="23dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/set_threshold_dialog_text_hint"/>

        <Button
            android:id="@+id/threshold_dialog_confirm"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:text="@string/set_threshold_dialog_confirm"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="41dp"
            android:textSize="16sp"
            android:background="@drawable/dialog_confirm_shape"
            android:textColor="#00ffff" />

    </LinearLayout>
</layout>
